<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="MainActivity" type="org.hugoandrade.rtpplaydownloader.MainActivity"/>
    </data>

    <RelativeLayout
        android:id="@+id/activity_main_kt_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <org.hugoandrade.rtpplaydownloader.widget.RoundedLinearLayout
            android:id="@+id/input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:padding="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:stroke_color="@android:color/transparent"
            app:stroke_width="0dp"
            app:background_color="#ddd">

            <EditText
                android:id="@+id/input_uri_edit_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:inputType="textUri"
                android:ems="10"
                android:hint="Url (eg. RTP Play, SIC, Sapo)"
                android:background="@android:color/transparent"
                android:text="https://www.rtp.pt/play/p2383/e236098/aqui-tao-longe" />

            <!-- android:text="https://www.rtp.pt/play/p2383/e236098/aqui-tao-longe" -->
            <!-- android:text="https://www.rtp.pt/play/p5682/bad-breakfast" -->
            <!-- android:text="https://www.rtp.pt/play/p5421/teorias-da-conspiracao" -->
            <!-- android:text="https://sicnoticias.pt/programas/verdade-ou-consequencia/2019-03-31-Verdade-ou-Consequencia-com-Adolfo-Mesquita-Nunes" -->
            <!-- android:text="https://www.rtp.pt/play/p4257/o-outro-lado" -->
            <!-- android:text="https://www.rtp.pt/play/p5683/menos-um" -->
            <!-- android:text="http://videos.sapo.pt/30CEmMITz50Tizli6EYv" -->
            <!-- android:text="https://sic.pt/Programas/e-se-fosse-consigo/2019-05-03-E-se-fosse-consigo- - -brevemente-na-SIC" -->

            <ImageView
                android:id="@+id/clear_text_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="4dp"
                android:src="@drawable/ic_clear"
                android:onClick="clearUriEditText"/>

            <ImageView
                android:id="@+id/paste_from_clipboard_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="4dp"
                android:src="@drawable/ic_content_paste"
                android:onClick="pasteFromClipboard"/>

        </org.hugoandrade.rtpplaydownloader.widget.RoundedLinearLayout>

        <Button
            android:id="@+id/download_media_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_layout"
            android:ems="10"
            android:text="Download"
            android:onClick="download" />
            <!--android:onClick="@{MainActivity::download}"/-->


        <include
            android:id="@+id/tv_no_network_connection"
            layout="@layout/layout_no_network_connection" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/download_items_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_no_network_connection"
            android:layout_below="@id/download_media_button" />

        <LinearLayout
            android:id="@+id/empty_list_view_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/download_media_button"
            android:paddingTop="70dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_movie"
                android:tint="#BFBFBF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="insert link and download"
                android:textColor="#BFBFBF"/>

        </LinearLayout>

    </RelativeLayout>

</layout>